<Window x:Class="KillMeHospitalManege.HastaServisİslemleri_Yatis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hasta Yatış İşlemi" Height="200" Width="400">
    <Grid Background="#FFE5E5E5">
        <TextBlock HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" Text="Hasta Seçiniz :" VerticalAlignment="Top"/>
        <ComboBox x:Name="CBHastalar" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top" Width="246" SelectedIndex="0">
            
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="10,43,0,0" TextWrapping="Wrap" Text="Oda Seçiniz : " VerticalAlignment="Top"/>
        <ComboBox x:Name="CBOda" HorizontalAlignment="Left" Margin="126,37,0,0" VerticalAlignment="Top" Width="246" SelectedIndex="0">
            
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="10,70,0,0" TextWrapping="Wrap" Text="Hastanın Doktoru :" VerticalAlignment="Top"/>
        <ComboBox x:Name="CBDoktorlar" HorizontalAlignment="Left" Margin="126,64,0,0" VerticalAlignment="Top" Width="246" SelectedIndex="0">
            
        </ComboBox>
        <Button x:Name="Kaydet" Content="İşlemi Gerçekleştir" HorizontalAlignment="Left" Margin="215,109,0,0" VerticalAlignment="Top" Width="157" Click="Kaydet_Click"/>


    </Grid>
</Window>
